server {
   server_name baitapcuoikhoa.xyz;

   location /chat {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header Host $http_host;
        proxy_pass ;
    }

    location /server {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header Host $http_host;
        proxy_pass ;
    }

    location ~ /.well-known {
        allow all;
    }

    listen [::]:443 ssl;
    listen 443 ssl;
    ssl_certificate /etc/letsencrypt/live/baitapcuoikhoa.xyz/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/baitapcuoikhoa.xyz/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

}

server {

    if ($host = baitapcuoikhoa.xyz) {
        return 301 https://$host$request_uri;
    }

   listen 80;
   listen [::]:80;

   server_name    baitapcuoikhoa.xyz;
    return 404;
}
